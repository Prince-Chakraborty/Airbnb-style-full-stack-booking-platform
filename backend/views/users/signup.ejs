<%- layout("layout/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Signup Card -->
      <div class="card shadow p-4 rounded">

        <!-- Logo & Tagline -->
        <div class="text-center mb-4">
          <h2 class="fw-bold mb-2">WanderLust</h2>
          <p class="text-muted small">Book unique stays, anytime, anywhere</p>
        </div>

        <!-- Flash Messages -->
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (success && success.length > 0) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>

        <!-- Signup Form -->
        <form action="/signup" method="POST" novalidate>
          
          <!-- Username -->
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" id="username" type="text" class="form-control" required>
            <div class="invalid-feedback">Username is required.</div>
          </div>

          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" id="email" type="email" class="form-control" required>
            <div class="invalid-feedback" id="email-error">Please use a valid Gmail address.</div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" type="password" class="form-control" required>
            <small class="text-muted">Your password is secure and encrypted.</small>
            <div class="invalid-feedback">Password is required.</div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>

        <!-- Login Link -->
        <p class="text-center mt-3">
          Already have an account? <a href="/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</div>

<script>
const form = document.querySelector("form");
const emailInput = document.getElementById("email");

form.addEventListener("submit", function(e) {
    const email = emailInput.value.trim();

    // Gmail-only regex
    if (!/^[a-zA-Z0-9._%+-]+@gmail\.com$/.test(email)) {
        e.preventDefault(); // stop form submission
        emailInput.classList.add("is-invalid"); // shows invalid-feedback
    } else {
        emailInput.classList.remove("is-invalid"); // remove if valid
    }
});
</script>
