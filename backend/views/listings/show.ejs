<% layout("/layout/boilerplate") %>

<style>
.show-card {
    border-radius: 1rem;
    overflow: hidden;
    margin-top: 1rem;
}
.show-img {
    width: 100%;
    max-height: 25rem;
    object-fit: cover;
    border-radius: 1rem 1rem 0 0;
}
.card-body p {
    margin: 0.3rem 0;
}
.btns .btn {
    margin-right: 1rem;
}
.starability-result {
    font-size: 1rem;
}
</style>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>

        <% 
            const avgRating = listing.reviews.length > 0 
            ? (listing.reviews.reduce((sum, r) => sum + r.rating, 0) / listing.reviews.length).toFixed(1) 
            : 0; 
        %>

        <p>⭐ Average Rating: <%= avgRating %> / 5 (<%= listing.reviews.length %> reviews)</p>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
        
        <!-- ✅ FIXED IMAGE SUPPORT FOR OLD & NEW LISTINGS -->
        <img 
            src="<%= 
                (listing.images && listing.images.length > 0) ? listing.images[0].url
                : (listing.image && listing.image.url) ? listing.image.url
                : (typeof listing.image === 'string') ? listing.image
                : '/images/default.jpg' 
            %>" 
            class="show-img" 
            alt="listing image"
        >

        <div class="card-body">
            <p>
                Owned by 
                <i><%= listing.owner.username %> (<%= listing.owner.role || "User" %>)</i>
            </p>

            <p><%= listing.description %></p>

            <p>
                &#8377; <span id="basePrice"><%= listing.price.toLocaleString("en-IN") %></span> / night
                <span id="totalPrice" style="display:none;">
                    (&#8377; <%= (listing.price * 1.18).toLocaleString("en-IN") %> incl. 18% GST)
                </span>
            </p>

            <div class="form-check form-switch mt-2">
                <input class="form-check-input" type="checkbox" id="taxSwitch">
                <label class="form-check-label" for="taxSwitch">
                    Show total with GST
                </label>
            </div>

            <p><%= listing.location %>, <%= listing.country %></p>
        </div>
    </div>
</div>

<!-- OWNER ACTIONS -->
<% if (currentUser && listing.owner._id.toString() === currentUser._id.toString()) { %>
<div class="btns mb-3 col-6 offset-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>

    <form 
        method="POST" 
        action="/listings/<%= listing._id %>?_method=DELETE" 
        class="d-inline delete-form"
    >
        <button class="btn btn-dark">Delete</button>
    </form>
</div>
<% } %>

<!-- REVIEW FORM -->
<% if (currentUser && listing.owner._id.toString() !== currentUser._id.toString()) { %>
<div class="col-8 offset-3 mb-3">
    <hr/>
    <h4>Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
        <div class="mb-3 mt-3">
            <label class="form-label">Rating</label>

            <fieldset class="starability-slot">
                <input type="radio" name="review[rating]" value="1" checked />
                <input type="radio" name="review[rating]" value="2" />
                <input type="radio" name="review[rating]" value="3" />
                <input type="radio" name="review[rating]" value="4" />
                <input type="radio" name="review[rating]" value="5" />
            </fieldset>
        </div>

        <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea 
                name="review[comment]" 
                rows="4" 
                class="form-control" 
                required
            ></textarea>
            <div class="invalid-feedback">Please add a comment</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr/>
</div>
<% } %>

<!-- REVIEWS LIST -->
<div class="col-8 offset-3">
    <% if (listing.reviews.length > 0) { %>
        <h4>All Reviews</h4>

        <div class="row">
            <% for (let review of listing.reviews) { %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5>@<%= review.author.username %></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        <p><%= review.comment %></p>
                    </div>

                    <% if (currentUser && review.author._id.toString() === currentUser._id.toString()) { %>
                        <form 
                            method="POST" 
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                            class="delete-form ms-3 mb-2"
                        >
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    <% } %>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <p>No reviews yet. Be the first to review!</p>
    <% } %>
</div>

<script>
const taxSwitch = document.getElementById("taxSwitch");
if (taxSwitch) {
    taxSwitch.addEventListener("change", () => {
        const total = document.getElementById("totalPrice");
        total.style.display = total.style.display === "none" ? "inline" : "none";
    });
}

document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", e => {
        if (!confirm("Are you sure you want to delete this?")) {
            e.preventDefault();
        }
    });
});
</script>
