<% layout("/layout/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .filter:hover,
  .filter.active {
    opacity: 1;
    font-weight: bold;
    color: #000;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0.2rem 0 0 0;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    margin-left: auto;
  }

  .listing-card {
    border: none;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .listing-card:hover {
    transform: scale(1.02);
  }

  .listing-img {
    height: 18rem;
    width: 100%;
    object-fit: cover;
    border-radius: 1rem;
  }

  .listing-link {
    text-decoration: none;
    color: inherit;
  }

  .card-body {
    padding: 0.5rem 0;
  }
</style>

<!-- SEARCH & SORT -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <form class="d-flex" method="GET" action="/listings">
    <input
      type="text"
      name="search"
      placeholder="Search by title, location, country"
      class="form-control me-2"
      value="<%= search %>"
    />
    <button class="btn btn-dark" type="submit">Search</button>
  </form>

  <div>
    <select id="sortSelect" class="form-select">
      <option value="" <%= !sort ? "selected" : "" %>>Sort by</option>
      <option value="price-low" <%= sort === "price-low" ? "selected" : "" %>>Price: Low → High</option>
      <option value="price-high" <%= sort === "price-high" ? "selected" : "" %>>Price: High → Low</option>
      <option value="trending" <%= sort === "trending" ? "selected" : "" %>>Trending</option>
    </select>
  </div>
</div>

<!-- FILTER BAR -->
<div id="filters">
  <% const filterTypes = ["trending","rooms","iconic","mountains","castles","pools","camping","farms","arctic","domes","boats"]; %>
  <% filterTypes.forEach(type => { %>
    <div class="filter <%= filter === type ? 'active' : '' %>" data-type="<%= type %>">
      <div><i class="fa-solid fa-circle"></i></div>
      <p><%= type.charAt(0).toUpperCase() + type.slice(1) %></p>
    </div>
  <% }) %>

  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- LISTINGS -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
  <% if (allListings.length === 0) { %>
    <p class="text-center mt-5">No listings found!</p>
  <% } else { %>
    <% allListings.forEach(listing => { %>
      <a href="/listings/<%= listing._id %>" class="listing-link col mb-4">
        <div class="card listing-card">

          <!-- ✅ FIXED IMAGE SUPPORT -->
          <img
          src="<%= 
          listing.images && listing.images.length > 0
          ? listing.images[0].url
          : listing.image
          ? (typeof listing.image === 'string' ? listing.image : listing.image.url)
          : '/images/default.jpg'
          %>"
          class="card-img-top listing-img"
          alt="listing image"
          />


          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title || 'Untitled Listing' %></b><br />
              &#8377; 
              <span class="listing-price" data-base="<%= listing.price || 0 %>">
                <%= listing.price ? listing.price.toLocaleString('en-IN') : '0' %>
              </span> / night
            </p>
          </div>

        </div>
      </a>
    <% }) %>
  <% } %>
</div>

<!-- PAGINATION -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center mt-4">
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %><%= search ? `&search=${search}` : '' %><%= filter ? `&filter=${filter}` : '' %><%= sort ? `&sort=${sort}` : '' %>"><%= i %></a>
      </li>
    <% } %>
  </ul>
</nav>

<script>
  // Toggle GST display
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  if (taxSwitch) {
    taxSwitch.addEventListener("change", () => {
      const prices = document.querySelectorAll(".listing-price");
      prices.forEach(priceEl => {
        const basePrice = Number(priceEl.dataset.base);
        if (taxSwitch.checked) {
          const total = Math.round(basePrice * 1.18);
          priceEl.textContent = total.toLocaleString('en-IN');
        } else {
          priceEl.textContent = basePrice.toLocaleString('en-IN');
        }
      });
    });
  }

  // Filter click
  const filterElements = document.querySelectorAll(".filter");
  filterElements.forEach(el => {
    el.addEventListener("click", () => {
      const type = el.dataset.type;
      const urlParams = new URLSearchParams(window.location.search);
      urlParams.set("filter", type);
      urlParams.set("page", 1);
      window.location.search = urlParams.toString();
    });
  });

  // Sort change
  const sortSelect = document.getElementById("sortSelect");
  if (sortSelect) {
    sortSelect.addEventListener("change", () => {
      const urlParams = new URLSearchParams(window.location.search);
      urlParams.set("sort", sortSelect.value);
      urlParams.set("page", 1);
      window.location.search = urlParams.toString();
    });
  }
</script>
